@import '../../../theme/web/custom-variables';

.mx-window-footer {
    padding: 15px 20px;
}

.col-spacing-none {
    padding: 0 !important;
}

.card-highlight {
    background-color: #F9FAFB;
    padding: $spacing-medium;
    border-radius: $border-radius-default;
}

.card-highlight-light {
    background-color: #ffffff;
    padding: $spacing-medium;
    border-radius: $border-radius-default;
}

.mx-dialog .modal-body {
    text-align: center;
}

.widget-tooltip .widget-tooltip-content {
    font-weight: normal;
    color: $font-color-default;
    text-align: left;
}

.text-initial {
    display:block;
    visibility:hidden;
}

.text-initial::first-letter {
    visibility: visible;
}

.section-separator {
    width: 100%;
    height: 1px;
    background-color: #F1F3F5;
    margin: $spacing-large 0;
}


/* Scrollbar */

/* width */
::-webkit-scrollbar {
    width: 10px;
  }
  
  /* Track */
  ::-webkit-scrollbar-track {
    background-color: $gray-lighter; 
    border-radius: 0px;
  }
   
  /* Handle */
  ::-webkit-scrollbar-thumb {
    background: $gray-light;
  }
  
  /* Handle on hover */
  ::-webkit-scrollbar-thumb:hover {
    background: $gray; 
  }
