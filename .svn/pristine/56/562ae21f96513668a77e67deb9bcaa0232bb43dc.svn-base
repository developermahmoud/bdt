/* ==========================================================================
   Pageheader
========================================================================== */

//== Default
//-------------------------------------------------------------------------------------------------------------------//
.pageheader {
    width: 100%;
    margin-bottom: $spacing-medium;
}

//== Elements
//-------------------------------------------------------------------------------------------------------------------//
.pageheader-title {
}

.pageheader-subtitle {
}

.pageheader-image {
}

.status-badge {
    padding: 5px 8px;
    margin-left: $spacing-small;
    font-size: 12px;
    border-radius: $border-radius-default;
    font-weight: 600;
    &.newlead {
        background-color: #F9FAFB;
    }
}

.header-system {
    color: #ffffff;
    &.mx-text {
        font-weight: 600;
        font-size: 13px;
        margin-left: 5px;
        border-left: 1px solid #ffffff;
    }
}